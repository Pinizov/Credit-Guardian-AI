[flake8]
max-line-length = 127
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    alembic/versions,
    build,
    dist,
    *.egg-info

[isort]
profile = black
line_length = 127
skip = venv,.venv,alembic/versions

[mypy]
python_version = 3.11
warn_return_any = True
warn_unused_configs = True
ignore_missing_imports = True
exclude = (venv|alembic/versions)
