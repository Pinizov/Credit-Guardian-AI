# SQLite default fallback
DATABASE_URL=sqlite:///credit_guardian.db

# Postgres configuration (used when docker-compose runs)
POSTGRES_DB=credit_guardian
POSTGRES_USER=cg_user
POSTGRES_PASSWORD=cg_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
# Combined URL (override DATABASE_URL)
# DATABASE_URL=postgresql+psycopg2://cg_user:cg_pass@localhost:5432/credit_guardian

LOG_LEVEL=INFO

# Scraping
SCRAPING_DELAY=2
MAX_RETRIES=3
TIMEOUT=30

# Optional API keys
OPENAI_API_KEY=  # задайте ключ за да активирате AI анализатора

# AWS S3 (optional - for storing contract PDFs)
AWS_S3_BUCKET=credit-guardian-contracts
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
